@using Example.Core.Web.Extensions
<div class="form-group">
    <label for="@ViewData.TemplateInfo.HtmlFieldPrefix" class="col-sm-2 control-label">
        @ViewData.ModelMetadata.DisplayName
    </label>
    <div class="col-sm-10">
        @Html.DropDownListFor(model => model
            , ViewData.ModelMetadata.GetSelectList()
            , "请选择..."
            , new {@class = "form-control"})
    </div>
</div>
