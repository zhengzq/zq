@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_FormLayout.cshtml";
}
@model Example.Core.ViewModel.ManagerModel

<div class="ibox float-e-margins">
    <div class="ibox-title">
        @Html.Partial("_BreadcrupbPartial", new List<Tuple<string, string>>()
        {
            new Tuple<string, string>("/Admin/manager/index","用户列表"),
            new Tuple<string, string>(Request.RawUrl,"用户编辑")
        })
    </div>
    <div class="ibox-content">
        <div class="note note-info">More info and examples at </div>
        <form class="panel form-horizontal">
            <div class="row">
                @Html.EditorForModel("SingleLineForm")
                <hr class="panel-wide">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-9">
                        <button class="btn btn-primary" type="button" onclick="submitForm()">提交修改</button>
                        <a class="btn btn-default"
                           href="javascript:document.referrer?location.href=document.referrer:history.go(-1);">
                            返回
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

