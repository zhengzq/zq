@{
    ViewBag.Title = "ZQ";
    Layout = null;
}
@model Example.Web.Areas.Admin.Models.LoginModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>后台 - 登录</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <link rel="shortcut icon" href="/Areas/Admin/favicon.ico">
    <link href="/Areas/Admin/css/bootstrap.min.css?v=3.3.6" rel="stylesheet">
    <link href="/Areas/Admin/css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <link href="/Areas/Admin/css/animate.css" rel="stylesheet">
    <link href="/Areas/Admin/css/style.css?v=4.1.0" rel="stylesheet">
    <!--[if lt IE 9]>
    <meta http-equiv="refresh" content="0;ie.html" />
    <![endif]-->
    <script>if (window.top !== window.self) { window.top.location = window.location; }</script>
</head>
<body class="gray-bg">
    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">@ViewBag.Title</h1>
            </div>
            <h3>欢迎</h3>
            <form class="m-t" role="form" action="/admin/account/login" method="post">
                <div class="form-group">
                    @Html.TextBoxFor(model => model.LoginName
                    , new
                    {
                        type = "text",
                        @class = "form-control",
                        @placeholder = "登入名",
                        @required = ""
                    })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(model => model.Password
                        , new
                        {
                            type = "password",
                            @class = "form-control",
                            @placeholder = "密码",
                            @required = ""
                        })
                </div>
                <div class="form-group">
                  @Model.Error
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">登 录</button>
            </form>
        </div>
    </div>
    <!-- 全局js -->
    <script src="/Areas/Admin/js/jquery.min.js?v=2.1.4"></script>
    <script src="/Areas/Admin/js/bootstrap.min.js?v=3.3.6"></script>
  
</body>
</html>
